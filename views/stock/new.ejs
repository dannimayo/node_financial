<form action="/stock/create" method="POST" >
  <h2>Create a new Stock for <%= customer.name %></h2>

  <input type="hidden" name="owner" value="<%- customer.id %>" />

  <input type="text" placeholder="Symbol" name="symbol" ><br />
  <input type="text" placeholder="Name" name="name" ><br />
  <input type="float" placeholder="Number of Shares" name="number_of_shares" ><br />
  <input type="float" placeholder="Price" name="price" ><br />

  <input type="submit" value="Add Stock" />
</form>

